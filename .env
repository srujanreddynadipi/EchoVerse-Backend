# EchoVerse Backend Configuration
# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=echoverse
DB_USERNAME=echoverse
DB_PASSWORD=12345678

# Hugging Face Configuration (Recommended)
# https://huggingface.co/ibm-granite/granite-3.3-2b-instruct
HUGGINGFACE_API_TOKEN=
HUGGINGFACE_TEXT_MODEL=ibm-granite/granite-3.3-2b-instruct
HUGGINGFACE_TTS_MODEL=microsoft/speecht5_tts

# IBM Watsonx LLM Configuration (Alternative)
WATSONX_API_KEY=YOUR_WATSONX_API_KEY
WATSONX_URL=https://us-south.ml.cloud.ibm.com
WATSONX_PROJECT_ID=YOUR_PROJECT_ID

# IBM Watson Text-to-Speech Configuration (Alternative)
TTS_API_KEY=YOUR_TTS_API_KEY
TTS_URL=https://api.us-south.text-to-speech.watson.cloud.ibm.com

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
